<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="101dp"
        android:text="Hotline"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_gravity="center"
        android:layout_marginTop="95dp"
        android:text="Polisi"
        android:textColor="@color/purple_200"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_gravity="center"
        android:layout_marginTop="142dp"
        android:text="Pemadam"
        android:textColor="@color/purple_200"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="305dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_gravity="center"
        android:layout_marginTop="81dp"
        android:text="Ambulance"
        android:textColor="@color/purple_200"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="473dp" />

    <ImageView
        android:id="@+id/polisi"
        android:layout_width="124dp"
        android:layout_height="109dp"
        android:layout_below="@+id/t1"
        android:layout_alignLeft="@id/textView"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="264dp"
        android:layout_marginTop="91dp"
        android:layout_marginRight="22dp"
        app:srcCompat="@drawable/phone"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="111dp" />

    <ImageView
        android:id="@+id/pemadam"
        android:layout_width="74dp"
        android:layout_height="95dp"
        android:layout_below="@+id/polisi"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="88dp"
        android:layout_marginRight="22dp"
        app:srcCompat="@drawable/phone"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/ambulance"
        android:layout_width="73dp"
        android:layout_height="116dp"
        android:layout_below="@+id/pemadam"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="61dp"
        android:layout_marginRight="18dp"
        app:srcCompat="@drawable/phone"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="443dp" />

</RelativeLayout>